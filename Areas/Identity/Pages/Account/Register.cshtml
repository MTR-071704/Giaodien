@page
@model PhucPhuongCare.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}

<style>
    body {
        background: linear-gradient(to right, #e8f5f9, #f0fdfa);
        font-family: 'Segoe UI', sans-serif;
    }

    .register-container {
        max-width: 450px;
        margin: 60px auto;
        background: #ffffff;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 120, 180, 0.15);
    }

        .register-container h2 {
            color: #007bba;
            font-weight: bold;
            margin-bottom: 25px;
            text-align: center;
        }

    .form-label {
        font-weight: 600;
        color: #005f86;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #cde4ef;
    }

    .btn-register {
        background-color: #00a8c5;
        color: white;
        font-weight: bold;
        border-radius: 30px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

        .btn-register:hover {
            background-color: #0089a0;
        }

    .text-danger {
        font-size: 0.875em;
    }
</style>

<div class="register-container">
    <h2><i class="bi bi-heart-pulse-fill me-2"></i>Đăng ký tài khoản</h2>

    <form method="post">
        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Email</label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
            <input asp-for="Input.Password" class="form-control" type="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-register">Đăng ký</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
